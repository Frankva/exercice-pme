doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= pageTitle
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css")
  body
    section.section
      .container
        h1.title Hello World
        p.subtitle My first website with #[strong Bulma]!
        form(method='post')
          .field
            label.label(for='email') Adresse de courriel
            .control
              input.input#email(type='email' name='email')
          .field
            label.label(for='password') Mot de passe
            .control
              input.input#password(type='password' name='password')
          .field.is-grouped
            .control
              button.button.is-link Envoyer
            .control
              a(href='/').button.is-link.is-light Annuler
    footer.footer 
      .content.has-text-centered



